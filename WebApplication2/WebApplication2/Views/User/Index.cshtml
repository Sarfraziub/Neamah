
@model IEnumerable<WebApplication2.ViewModel.UsersViewModel>
@using GridMvc.Html
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-md-12 grid">
        @Html.Grid(Model).Named("UserGrid").Columns(c =>
   {
       c.Add(x => x.UserId).Titled("User ID").Filterable(true).Sortable(true);
       c.Add().RenderValueAs(x => $"{x.FirstName} {x.LastName}").Titled("Name").Filterable(true).Sortable(true);
       c.Add(x => x.Email).Titled("User Email").Filterable(true).Sortable(true);
       c.Add(x => x.Department).Titled("Department").Filterable(true).Sortable(true);
       c.Add(x => x.DeviceNames).Titled("Assign Device").Filterable(true).Sortable(true);
       c.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.UserId }, new { @class = "btn btn-primary" }));
       c.Add()
       .Encoded(false)
       .Sanitized(false)
       .SetWidth(30)
       .RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { id = o.UserId }, new { @class = "btn btn-danger" }));
   }).WithPaging(5).EmptyText("No data found")
    </div>
</div>

@section styles {
    @Styles.Render("~/Content/Gridmvc")
    <style>
        .grid-header-title a {
            color: black;
            text-decoration: none;
        }
    </style>
}

@section scripts{
    @Scripts.Render("~/bundles/Gridmvc")
}

