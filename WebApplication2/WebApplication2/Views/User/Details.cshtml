@model WebApplication2.Models.Users
@using GridMvc.Html
@{
    ViewBag.Title = "User Details";
}

<link href="~/Content/SearchBar.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    .table thead th {
        background-color: #343a40; /* Dark gray background */
        color: white !important; /* White text */
    }

        .table thead th a {
            color: white !important; /* White text */
        }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
<div class="container mt-5">
    <h2 class="mb-4">View User</h2>

    <div class="card">
        <div class="card-header">
            <h5>User Details</h5>
        </div>
        <div class="card-body">
            <div class="form-group row">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.FirstName, new { @class = "form-control-plaintext" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.LastName, new { @class = "form-control-plaintext" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Email, new { @class = "form-control-plaintext" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Department, new { @class = "form-control-plaintext" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.IsAdmin, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.IsAdmin, new { @class = "form-control-plaintext" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.IsSuperAdmin, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.IsSuperAdmin, new { @class = "form-control-plaintext" })
                </div>
            </div>
        </div>
    </div>
</div>